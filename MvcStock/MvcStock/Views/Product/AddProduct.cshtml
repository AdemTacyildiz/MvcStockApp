@model MvcStock.Models.Entity.TblProducts

@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>NewProduct</h2>

<form method="post" class="form-group">
    <div>
        <label>Product Name</label>
        <input type="text" class="form-control" name="ProductName" required="" maxlength="10"/>
    </div>
    <div>
        <label>Product Brand</label>
        <input type="text" class="form-control" name="ProductBrand" required="" maxlength="15"/>
    </div>
    <div>
        <label>Product Category</label>
        @Html.DropDownListFor(m => m.TblCategories.CategoryID, (List<SelectListItem>)ViewBag.vls, new { @class = "form-control"})
    </div>
    <div>
        <label>Product Price</label>
        <input type="text" class="form-control" name="ProductPrice" required="" maxlength="15"/>
    </div>
    <div>
        <label>Product Stock</label>
        <input type="text" class="form-control" name="ProductStock" required="" maxlength="3"/>
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">New Product Add</button>
    </div>

</form>

